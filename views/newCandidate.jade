                    |     
                    .form-group.col-md-4
                      label Codice Fiscale:
                      |       
                      input.form-control(type='text', name='idnp', placeholder='')
                    .form-group.col-md-2
                      label Nazionalita:
                      |       
                      input.form-control(type='text', name='nationality', placeholder='')
                    |  
                    .form-group.col-md-2
                      label Sesso:
                      |       
                      select.form-control(name='gender')
