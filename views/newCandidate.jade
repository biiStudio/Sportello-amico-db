                    li.alert.alert-danger #{error.msg}
            h5 INFORMAZIONI PERSONALI:
        
        form(method='post', action='/candidats/new_candidate',enctype='multipart/form-data')
                .form-row
                    .form-group.col-md-6
                      label Nome:
                      |       
                      input.form-control(type='text', name='firstname', placeholder='Nome')
                    |     
                    .form-group.col-md-6
                      label Cognome:
                      |       
                      input.form-control(type='text', name='lastname', placeholder='Cognome')
                    |  
                .form-row
